@model List<Category>
<partial name="_Notification"/>

<div class="row">
    <div class="col-md-6">
        <h2>LIST CATEGORY</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-database-add"></i> Create New</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Display Order</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td class="text-right">@x.DisplayOrder</td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-secondary pr-2" style="width:100px"><i class="bi bi-pen"></i> Edit</a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger" style="width:100px" onclick="return confirm('Bạn có muốn xóa không ?')"><i class="bi bi-trash3"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>