@model Product

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <div class="row mt-5">
        <h2>Edit Product</h2>
        <hr />
    </div>
    <div class="row mt-5">
        <div class="col-4">
            <img src="~/images/products/@Model.ImageUrl" alt="Alternate Text" width="100%" />
            <input type="hidden" asp-for="ImageUrl" />
        </div>
        <div class="col-8">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>CategoryID</label>
                <select asp-for="CategoryID" asp-items="@ViewBag.ListCategory" class="form-control">
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="fUpload" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" asp-route-pageindex="@ViewBag.pageindex" class="btn btn-primary"> Save </button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

</form>

@section Scripts
{
    <script>
        tinymce.init({
            selector: 'textarea',
            
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant"))
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}